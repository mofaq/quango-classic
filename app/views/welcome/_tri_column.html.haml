.left{:style=>"width:238px;background-color:#ffffff;border-right:4px solid white; display:block;border-radius:0 8px;"}

  .div.inner{:style=>"margin:0"}
    .column-header{:style=>"border-radius:0 0 0 0;border-bottom:0;height:28px;padding:8px;line-height:2em;font-weight:bold;font-size:14px;color:#{current_group.text_colour};letter-spacing:-1px;background-color:#{current_group.secondary}"}
      = current_group.column1_title.to_s

    .note{:style=>"padding:8px;font-size:11px;font-weight:bold;letter-spacing:-1px"}
      = current_group.column1_description.to_s


  .div

    = render :partial => "col", :locals => {:col_items => @column_items[:col1_items]}



.left{:style=>"width:238px;background-color:#ffffff;border-right:4px solid white; display:block"}

  .div.inner{:style=>"margin:0"}
    .column-header{:style=>"border-radius:0 0 0 0;border-bottom:0;height:28px;padding:8px;line-height:2em;font-weight:bold;font-size:14px;color:#{current_group.text_colour};letter-spacing:-1px;background-color:#{current_group.tertiary}"}
      = current_group.column2_title.to_s
    .note{:style=>"padding:8px;font-size:11px;font-weight:bold;letter-spacing:-1px"}
      = current_group.column2_description.to_s
  .div
    = render :partial => "col", :locals => {:col_items => @column_items[:col2_items]}

.left{:style=>"width:546px;"}
  .div{:style=>"height:8px;width:100%;background-color:#{current_group.supplementary_lite};"}

    .left{:style=>"width:238px;background-color:#ffffff; display:block"}

      .div.inner{:style=>"margin:0;width:238px;"}
        .column-header{:style=>"border-radius:8px 0 8px 8px;height:28px;padding:8px;line-height:2em;font-weight:bold;font-size:14px;color:#{current_group.text_colour};background-color:#{current_group.supplementary_lite};letter-spacing:-1px;",:class=>"yes-yarra"}
          = current_group.column3_title.to_s
          .right
            %div{:style=>"float:right;"}
              %a{:style=>"float:right; padding:0 12px;font-size:0.9em;line-height:2em;", :class => "inner-submit", :href => "/m/questions/id/new"}
                = " Post "

        .note{:style=>"padding:8px;font-size:11px;font-weight:bold;letter-spacing:-1px"}
          = current_group.column3_description.to_s
      .div
        = render :partial => "col", :locals => {:col_items => @column_items[:col3_items]}


    - if current_group.has_columns

      .sidebar-inner{:style => "float:right; width:300px;margin-left:8px;"}

        .block{:style => "margin-bottom:4px"}


          .column-header{:style=>"margin-top:16px;border-radius:0 8px 0 0;border-bottom:0;height:28px;padding:8px 0 0 8px;line-height:2em;font-weight:bold;font-size:14px;color:#{current_group.text_colour};letter-spacing:-1px;background-color:#{current_group.secondary}"}
            = "Who we are"
          .content
            .markdown{:style => "padding:8px;background-color:#{current_group.tertiary};"}
              = markdown(current_group.description)



        -if current_group.has_medium_rectangle
          .medium-rectangle{:style=>"background-color:white;margin:10px 0;padding:2px 0; border-bottom:2px solid gainsboro; border-top:2px solid gainsboro"}
            = current_group.medium_rectangle_content
          .clear




          .block{:style=>"display:none"}
            = render :partial => "shared/sidebar_actions",  :locals => {:width => "wide"}

          -#- current_group.widgets.each do |widget|
            -#.widget.block{:id => widget.name}
              -#= render :partial => widget.partial_name, :locals => {:widget => widget, :width => "wide"}



        = render :partial => "shared/community_sponsor",  :locals => {:width => "wide"}
        = render :partial => "shared/sponsored_links",  :locals => {:width => "wide"}
